{
  "compilerOptions": {
    "incremental": true,
    "target": "es2022",
    "module": "commonjs",
    "lib": ["dom", "es2022"],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": ".erb/dll",
    "baseUrl": "./",
    "paths": {
      "@pages": ["src/renderer/pages"],
      "@components": ["src/renderer/components"],
      "@icons": ["src/renderer/icons"],
      "@routes": ["src/renderer/routes"],
      "@hooks": ["src/renderer/hooks"],
      "@tokens": ["src/renderer/tokens"],
      "@config": ["src/renderer/config/index.ts"],
    }
  },
  "exclude": ["test", "release/build", "release/app/dist", ".erb/dll"]
}
